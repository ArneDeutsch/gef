grammar org.eclipse.gef4.dot.internal.parser.DotSplineType with org.eclipse.gef4.dot.internal.parser.DotPoint

generate dotSplineType "http://www.eclipse.org/gef4/dot/internal/parser/DotSplineType"
import "http://www.eclipse.org/emf/2002/Ecore" as ecore

SplineType:
	splines+=Spline (";" splines+=Spline)*;

Spline:
	("e" "," endp=Point)? ("s" "," startp=Point)? controlPoints+=Point (controlPoints+=Point controlPoints+=Point
	controlPoints+=Point)+;